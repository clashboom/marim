/* ==========================================================================
    Footer
   ========================================================================== */
.footerrow
    *zoom: 1
    &:before, &:after
        content: ''
        display: table
    &:after
        clear: both
    h6
        font-weight 900
        padding-bottom ms(10)
    &:first-child
        background-color c3
        color white
        padding-top 2.5em
        padding-bottom 2em
        h6,
        a:hover
            color c2
    &:nth-child(2)
        background-color c4
        padding-top 2.5em
        padding-bottom 2.5em
        h6
            color c1
        a,
        label
            color white
        a:hover
            color c1
    &:last-child
        background-color c5
        color c3
        padding 20px 0
        a
            color c3
            &:hover
                color c1

